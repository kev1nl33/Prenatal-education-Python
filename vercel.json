{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "functions": {
    "api/*.py": {
      "runtime": "python3.12"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" }
  ],
  "env": {
    "MODE": "sandbox",
    "PYTHONPATH": "."
  },
  "build": {
    "env": {
      "MODE": "sandbox"
    }
  }
}